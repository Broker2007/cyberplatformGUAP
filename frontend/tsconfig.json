{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "types": [
      "node"
    ],
    "target": "es5",
    "baseUrl":".",
    "paths": {
      "*": ["./src/*"]
    },
    "allowJs": true,
    "moduleResolution": "node",
    // 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./config/**/**/*.ts",
    // "./config/**/types/*.ts",
    "./.storybook/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}
